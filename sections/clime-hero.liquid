{% comment %}
  CLIME Hero Section (Dawn-native, 2-column layout, full white text)
{% endcomment %}

<section class="clime-hero-wrapper">
  <!-- Background image -->
  <div class="clime-hero-bg">
    {% if section.settings.bg_image %}
      {{ section.settings.bg_image | image_url: width: 2000 | image_tag: class: 'clime-hero-img' }}
    {% endif %}
  </div>

  <!-- Dark overlay -->
  <div class="clime-hero-overlay"></div>

  <!-- Content -->
  <div class="clime-hero-content page-width">
    
    <!-- LEFT COLUMN (TEXT) -->
    <div class="clime-hero-text">
      {% if section.settings.lead_text %}
        <p class="clime-hero-lead">{{ section.settings.lead_text }}</p>
      {% endif %}

      {% if section.settings.title_text %}
        <h1 class="clime-hero-title">{{ section.settings.title_text }}</h1>
      {% endif %}

      {% if section.settings.sub_text %}
        <p class="clime-hero-sub">{{ section.settings.sub_text }}</p>
      {% endif %}

      {% if section.settings.btn_label and section.settings.btn_link %}
        <a href="{{ section.settings.btn_link }}" class="clime-hero-btn">
          {{ section.settings.btn_label }}
        </a>
      {% endif %}
    </div>

    <!-- RIGHT COLUMN (POUCH IMAGE) -->
    {% if section.settings.pouch_image %}
      <div class="clime-hero-pouch">
        {{ section.settings.pouch_image | image_url: width: 700 | image_tag: class: 'pouch-img' }}
      </div>
    {% endif %}

  </div>
</section>

<style>
/* WRAPPER */
.clime-hero-wrapper {
  position: relative;
  height: {{ section.settings.height_desktop }}vh;
  min-height: 480px;
  display: flex;
  align-items: center;
  overflow: hidden;
  color: #ffffff;
}

/* MOBILE FIX: push hero text down so it's not hidden by header */
@media screen and (max-width: 749px) {
  .clime-hero-content {
    padding-top: 90px;  /* adjust up/down if needed */
  }
}

/* BACKGROUND */
.clime-hero-bg {
  position: absolute;
  inset: 0;
  z-index: 1;
  animation: heroBgZoom 20s ease-in-out infinite alternate;
}

.clime-hero-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

@keyframes heroBgZoom {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.05);
  }
}

/* OVERLAY */
.clime-hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, {{ section.settings.overlay_opacity }}) 0%, rgba(0, 0, 0, {{ section.settings.overlay_opacity | times: 0.7 }}) 100%);
  z-index: 2;
}

/* CONTENT LAYOUT */
.clime-hero-content {
  position: relative;
  z-index: 3;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 50px;
  width: 100%;
  animation: fadeInUp 1s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* FORCE ALL TEXT WHITE */
.clime-hero-text,
.clime-hero-text h1,
.clime-hero-text h2,
.clime-hero-text h3,
.clime-hero-text p {
  color: #ffffff !important;
}

/* TEXT BLOCK */
.clime-hero-text {
  max-width: 520px;
  animation: fadeInLeft 1s ease-out 0.2s both;
}

@keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.clime-hero-lead {
  font-size: 12px;
  letter-spacing: 1.8px;
  text-transform: uppercase;
  margin-bottom: 10px;
  opacity: 0.95;
  font-weight: 600;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.clime-hero-title {
  font-size: 48px;
  font-weight: 800;
  line-height: 1.15;
  margin-bottom: 18px;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  letter-spacing: -0.5px;
}

.clime-hero-sub {
  font-size: 18px;
  line-height: 1.6;
  opacity: 0.95;
  margin-bottom: 28px;
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  font-weight: 400;
}

/* BUTTON - MODERN TRANSPARENT STYLE */
.clime-hero-btn {
  display: inline-block;
  padding: 16px 32px;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #ffffff !important;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 15px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  letter-spacing: 0.5px;
  border: 1.5px solid rgba(255, 255, 255, 0.3);
  z-index: 1;
}

.clime-hero-btn:hover {
  transform: translateY(-2px);
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.clime-hero-btn:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* RIGHT COLUMN IMAGE */
.clime-hero-pouch {
  animation: fadeInRight 1s ease-out 0.4s both;
  filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
}

@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.clime-hero-pouch .pouch-img {
  width: 380px;
  height: auto;
  display: block;
  transition: transform 0.3s ease;
}

.clime-hero-pouch:hover .pouch-img {
  transform: scale(1.05) rotate(2deg);
}

/* MOBILE LAYOUT */
@media (max-width: 768px) {
  .clime-hero-wrapper {
    height: auto;               
    min-height: 520px;          
    padding: 72px 5vw 32px;     
    align-items: flex-start;    
    overflow: visible;          
  }

  .clime-hero-content {
    flex-direction: column;
    text-align: center;      /* center text on mobile */
    align-items: center;     /* center the column itself */
    gap: 24px;
  }

  /* Center the text block itself */
  .clime-hero-text {
    max-width: 520px;
    text-align: center;
    margin: 0 auto;
  }

  /* Make sure each text element is centered */
  .clime-hero-lead,
  .clime-hero-title,
  .clime-hero-sub {
    text-align: center;
  }

  /* Center the button */
  .clime-hero-btn {
    display: inline-block;
    margin-left: auto;
    margin-right: auto;
  }

  .clime-hero-title {
    font-size: 32px;
  }

  .clime-hero-sub {
    font-size: 16px;
  }

  .clime-hero-pouch .pouch-img {
    width: 220px;
  }

  .clime-hero-pouch:hover .pouch-img {
    transform: scale(1.02);
  }
}


</style>

