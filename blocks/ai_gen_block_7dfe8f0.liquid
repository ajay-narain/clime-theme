{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-science-page-{{ ai_gen_id }} {
    padding: 60px 20px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-science-page__title-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 60px;
    color: {{ block.settings.title_color }};
  }

  .ai-science-page__segments-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.segment_spacing }}px;
  }

  .ai-science-segment-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {{ block.settings.icon_size }}px 1fr;
    gap: {{ block.settings.content_gap }}px;
    align-items: start;
    padding: {{ block.settings.segment_padding }}px;
    background-color: {{ block.settings.segment_bg_color }};
    border-radius: {{ block.settings.segment_radius }}px;
  }

  .ai-science-segment__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_bg_color }};
    border-radius: {{ block.settings.icon_radius }}px;
    padding: {{ block.settings.icon_padding }}px;
  }

  .ai-science-segment__icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
    fill: none;
  }

  .ai-science-segment__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-science-segment__label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ block.settings.label_color }};
    margin: 0;
  }

  .ai-science-segment__headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 700;
    color: {{ block.settings.headline_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-science-segment__subhead-{{ ai_gen_id }} {
    font-size: {{ block.settings.subhead_size }}px;
    line-height: 1.6;
    color: {{ block.settings.subhead_color }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-science-page-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-science-page__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
      margin-bottom: 40px;
    }

    .ai-science-segment-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-science-segment__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
      margin: 0 auto;
    }

    .ai-science-segment__content-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-science-segment__headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.85);
    }

    .ai-science-segment__subhead-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subhead_size }}px * 0.9);
    }
  }
{% endstyle %}

