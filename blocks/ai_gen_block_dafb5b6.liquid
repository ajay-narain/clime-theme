{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    text-align: {{ block.settings.title_alignment }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    line-height: 1.2;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_radius }}px;
    border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
  }

  .ai-testimonial-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    color: {{ block.settings.headline_color }};
    margin: 0 0 16px;
    line-height: 1.3;
  }

  .ai-testimonial-body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.body_color }};
    line-height: 1.6;
    margin: 0 0 20px;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_size }}px;
    color: {{ block.settings.author_color }};
    font-weight: 600;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-testimonials-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
      margin-bottom: {{ block.settings.title_spacing | times: 0.75 }}px;
    }

    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.card_spacing | times: 0.75 }}px;
    }

    .ai-testimonial-headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.9);
    }

    .ai-testimonial-body-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.body_size }}px * 0.95);
    }
  }
{% endstyle %}

<div class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% if block.settings.testimonial_1_headline != blank or block.settings.testimonial_1_body != blank %}
        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          {% if block.settings.testimonial_1_headline != blank %}
            <h3 class="ai-testimonial-headline-{{ ai_gen_id }}">{{ block.settings.testimonial_1_headline }}</h3>
          {% endif %}
          {% if block.settings.testimonial_1_body != blank %}
            <p class="ai-testimonial-body-{{ ai_gen_id }}">{{ block.settings.testimonial_1_body }}</p>
          {% endif %}
          {% if block.settings.testimonial_1_author != blank %}
            <p class="ai-testimonial-author-{{ ai_gen_id }}">— {{ block.settings.testimonial_1_author }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.testimonial_2_headline != blank or block.settings.testimonial_2_body != blank %}
        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          {% if block.settings.testimonial_2_headline != blank %}
            <h3 class="ai-testimonial-headline-{{ ai_gen_id }}">{{ block.settings.testimonial_2_headline }}</h3>
          {% endif %}
          {% if block.settings.testimonial_2_body != blank %}
            <p class="ai-testimonial-body-{{ ai_gen_id }}">{{ block.settings.testimonial_2_body }}</p>
          {% endif %}
          {% if block.settings.testimonial_2_author != blank %}
            <p class="ai-testimonial-author-{{ ai_gen_id }}">— {{ block.settings.testimonial_2_author }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.testimonial_3_headline != blank or block.settings.testimonial_3_body != blank %}
        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          {% if block.settings.testimonial_3_headline != blank %}
            <h3 class="ai-testimonial-headline-{{ ai_gen_id }}">{{ block.settings.testimonial_3_headline }}</h3>
          {% endif %}
          {% if block.settings.testimonial_3_body != blank %}
            <p class="ai-testimonial-body-{{ ai_gen_id }}">{{ block.settings.testimonial_3_body }}</p>
          {% endif %}
          {% if block.settings.testimonial_3_author != blank %}
            <p class="ai-testimonial-author-{{ ai_gen_id }}">— {{ block.settings.testimonial_3_author }}</p>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

