{% doc %}
  @prompt
    Social Proof Page. Content as follow:
    
    100,000+ 
    Preventable crashes caused by fatigue 
    *NHTSA 2017
    
    107%
    Gain in productivity with improved energy
    
    40%
    Percent of worker reporting fatigue at work
    
    The numbers should very large to grab attention. This should be on a black background with white font, Make the numbers smaller so that they all fit on the same line. Right now, the 100,000 and + are on separate lines
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-proof-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
  }

  .ai-social-proof-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-social-proof-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: {{ block.settings.gap }}px;
    text-align: center;
  }

  .ai-social-proof-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.item_gap }}px;
  }

  .ai-social-proof-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: {{ block.settings.number_weight }};
    color: {{ block.settings.text_color }};
    line-height: 1;
    margin: 0;
    white-space: nowrap;
  }

  .ai-social-proof-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
    margin: 0;
    max-width: 300px;
  }

  .ai-social-proof-source-{{ ai_gen_id }} {
    font-size: {{ block.settings.source_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    font-style: italic;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-social-proof-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-social-proof-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap | times: 1.5 }}px;
    }

    .ai-social-proof-number-{{ ai_gen_id }} {
      font-size: {{ block.settings.number_size | times: 0.6 }}px;
    }

    .ai-social-proof-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-social-proof-source-{{ ai_gen_id }} {
      font-size: {{ block.settings.source_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-social-proof-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-social-proof-container-{{ ai_gen_id }}">
    <div class="ai-social-proof-grid-{{ ai_gen_id }}">
      {% if block.settings.stat_1_enabled %}
        <div class="ai-social-proof-item-{{ ai_gen_id }}">
          <h2 class="ai-social-proof-number-{{ ai_gen_id }}">{{ block.settings.stat_1_number }}</h2>
          <p class="ai-social-proof-description-{{ ai_gen_id }}">{{ block.settings.stat_1_description }}</p>
          {% if block.settings.stat_1_source != blank %}
            <p class="ai-social-proof-source-{{ ai_gen_id }}">{{ block.settings.stat_1_source }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.stat_2_enabled %}
        <div class="ai-social-proof-item-{{ ai_gen_id }}">
          <h2 class="ai-social-proof-number-{{ ai_gen_id }}">{{ block.settings.stat_2_number }}</h2>
          <p class="ai-social-proof-description-{{ ai_gen_id }}">{{ block.settings.stat_2_description }}</p>
          {% if block.settings.stat_2_source != blank %}
            <p class="ai-social-proof-source-{{ ai_gen_id }}">{{ block.settings.stat_2_source }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.stat_3_enabled %}
        <div class="ai-social-proof-item-{{ ai_gen_id }}">
          <h2 class="ai-social-proof-number-{{ ai_gen_id }}">{{ block.settings.stat_3_number }}</h2>
          <p class="ai-social-proof-description-{{ ai_gen_id }}">{{ block.settings.stat_3_description }}</p>
          {% if block.settings.stat_3_source != blank %}
            <p class="ai-social-proof-source-{{ ai_gen_id }}">{{ block.settings.stat_3_source }}</p>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

