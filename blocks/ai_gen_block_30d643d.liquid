{% doc %}
  @prompt
    Page Title: 
    3 Steps to Better Energy (centered in section)
    
    Numbered Steps: 
    Take the Quiz - Discover your energy profile
    Build Your Blend - Use the quiz recommendations or make your own
    Monitor Your Levels - Use the app to track your energy
    Images
    Simple, solid background, The number for each steps should be oversized to empathize simplicity. Icons above the steps should be line drawings to emphasize simplicity
    CTA
    Button:  TAKE THE ENERGY QUIZ, get rid of the icons and make the numbers smaller, Make the whole section more compact. Make the CTA button consistent with the one on the hero page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-energy-steps-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-energy-steps-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-energy-steps-title-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
  }

  .ai-energy-steps-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.step_gap }}px;
    margin-bottom: {{ block.settings.cta_spacing }}px;
  }

  .ai-energy-step-{{ ai_gen_id }} {
    text-align: center;
    position: relative;
  }

  .ai-energy-step-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: 700;
    color: {{ block.settings.number_color }};
    line-height: 1;
    margin: 0 0 {{ block.settings.number_spacing }}px;
    opacity: {{ block.settings.number_opacity | divided_by: 100.0 }};
  }

  .ai-energy-step-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.step_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.step_title_color }};
    margin: 0 0 {{ block.settings.step_text_spacing }}px;
  }

  .ai-energy-step-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.step_text_size }}px;
    color: {{ block.settings.step_text_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-energy-steps-cta-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-energy-steps-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    z-index: 1;
  }

  .ai-energy-steps-button-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    background-color: {{ block.settings.button_hover_bg_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-energy-steps-button-{{ ai_gen_id }}:active {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  @media screen and (max-width: 749px) {
    .ai-energy-steps-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.step_gap | times: 1.2 }}px;
    }

    .ai-energy-steps-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-energy-step-number-{{ ai_gen_id }} {
      font-size: {{ block.settings.number_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-energy-steps-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-energy-steps-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-energy-steps-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    <div class="ai-energy-steps-grid-{{ ai_gen_id }}">
      <div class="ai-energy-step-{{ ai_gen_id }}">
        <div class="ai-energy-step-number-{{ ai_gen_id }}">1</div>
        <h3 class="ai-energy-step-title-{{ ai_gen_id }}">{{ block.settings.step_1_title }}</h3>
        <p class="ai-energy-step-text-{{ ai_gen_id }}">{{ block.settings.step_1_text }}</p>
      </div>

      <div class="ai-energy-step-{{ ai_gen_id }}">
        <div class="ai-energy-step-number-{{ ai_gen_id }}">2</div>
        <h3 class="ai-energy-step-title-{{ ai_gen_id }}">{{ block.settings.step_2_title }}</h3>
        <p class="ai-energy-step-text-{{ ai_gen_id }}">{{ block.settings.step_2_text }}</p>
      </div>

      <div class="ai-energy-step-{{ ai_gen_id }}">
        <div class="ai-energy-step-number-{{ ai_gen_id }}">3</div>
        <h3 class="ai-energy-step-title-{{ ai_gen_id }}">{{ block.settings.step_3_title }}</h3>
        <p class="ai-energy-step-text-{{ ai_gen_id }}">{{ block.settings.step_3_text }}</p>
      </div>
    </div>

    {% if block.settings.button_text != blank %}
      <div class="ai-energy-steps-cta-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-energy-steps-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

