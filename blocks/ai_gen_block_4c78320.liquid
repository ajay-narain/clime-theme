{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-science-section-{{ ai_gen_id }} {
    position: relative;
    padding: 80px 20px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .ai-science-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-science-container-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-science-title-{{ ai_gen_id }} {
    text-align: center;
    font-size: 48px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0 0 60px;
    line-height: 1.2;
  }

  .ai-science-cards-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-bottom: 60px;
  }

  .ai-science-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 32px;
    box-shadow: 0 4px 12px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease;
  }

  .ai-science-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-science-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ block.settings.icon_size | times: 0.6 }}px;
    margin-bottom: 24px;
  }

  .ai-science-eyebrow-{{ ai_gen_id }} {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ block.settings.eyebrow_color }};
    margin: 0 0 12px;
  }

  .ai-science-headline-{{ ai_gen_id }} {
    font-size: 24px;
    font-weight: 700;
    color: {{ block.settings.headline_color }};
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-science-subhead-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.6;
    color: {{ block.settings.subhead_color }};
    margin: 0;
  }

  .ai-science-cta-wrapper-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-science-cta-{{ ai_gen_id }} {
    display: inline-block;
    background-color: #000000;
    color: #ffffff;
    font-size: 16px;
    font-weight: 500;
    padding: 16px 40px;
    border-radius: 6px;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .ai-science-cta-{{ ai_gen_id }}:hover {
    opacity: 0.85;
  }

  @media screen and (max-width: 749px) {
    .ai-science-section-{{ ai_gen_id }} {
      padding: 60px 16px;
    }

    .ai-science-title-{{ ai_gen_id }} {
      font-size: 32px;
      margin-bottom: 40px;
    }

    .ai-science-cards-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 40px;
    }

    .ai-science-card-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-science-headline-{{ ai_gen_id }} {
      font-size: 20px;
    }

    .ai-science-subhead-{{ ai_gen_id }} {
      font-size: 14px;
    }
  }
{% endstyle %}

