{% comment %}
  Active Ingredients & Efficacy Section
  Discusses each active ingredient and their scientifically-backed benefits
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ingredients-efficacy-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ingredients-efficacy-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ingredients-efficacy-title-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.title_size }}px;
    font-weight: 800;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    letter-spacing: -0.5px;
  }

  .ingredients-efficacy-subtitle-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0 auto {{ block.settings.subtitle_spacing }}px;
    max-width: 700px;
    line-height: 1.6;
  }

  .ingredients-efficacy-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.ingredient_gap }}px;
  }

  .ingredient-efficacy-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ingredient-efficacy-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 4 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | plus: 5 | divided_by: 100.0 }});
  }

  .ingredient-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_name_size }}px;
    font-weight: 700;
    color: {{ block.settings.ingredient_name_color }};
    margin: 0 0 {{ block.settings.ingredient_name_spacing }}px;
  }

  .ingredient-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_spacing }}px;
  }

  .ingredient-efficacy-{{ ai_gen_id }} {
    font-size: {{ block.settings.efficacy_size }}px;
    line-height: 1.5;
    color: {{ block.settings.efficacy_color }};
    margin: 0;
    font-weight: 500;
  }

  @media screen and (max-width: 749px) {
    .ingredients-efficacy-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.ingredient_gap | times: 0.75 }}px;
    }

    .ingredients-efficacy-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ingredients-efficacy-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ingredients-efficacy-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ingredients-efficacy-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    {% if block.settings.subtitle != blank %}
