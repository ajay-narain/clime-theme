ument.getElementById(id);\n      if (el) el.innerText = value;\n    }\n\n    // Visible summary\n    setText(\"ea-caffeine\", caffeineMg);\n    setText(\"ea-focus\",   focusLevel.charAt(0).toUpperCase() + focusLevel.slice(1));\n    setText(\"ea-balance\", balanceLevel.charAt(0).toUpperCase() + balanceLevel.slice(1));\n    setText(\"ea-qty\",  qty);\n    setText(\"ea-qty2\", qty);\n    setText(\"ea-price\",    pricePerPouch.toFixed(2));\n    setText(\"ea-total\",    total.toFixed(2));\n    setText(\"ea-discount\", discountTotal.toFixed(2));\n    setText(\"ea-final\",    finalTotal.toFixed(2));\n\n    // Build compact config tag for Flow + email:\n    // cfg|caff-300|focus-high|balance-high|qty-14|pp-3.50|tot-49.00|disc-3.50|final-45.50\n    var cfgTagParts = [\n      \"cfg\",\n      \"caff-\"    + caffeineMg,\n      \"focus-\"   + focusLevel,\n      \"balance-\" + balanceLevel,\n      \"qty-\"     + qty,\n      \"pp-\"      + pricePerPouch.toFixed(2),\n      \"tot-\"     + total.toFixed(2),\n      \"disc-\"    + discountTotal.toFixed(2),\n      \"final-\"   + finalTotal.toFixed(2)\n    ];\n    var cfgTag = cfgTagParts.join(\"|\");\n\n    var tagsField = document.getElementById(\"cea-tags\");\n    if (tagsField) {\n      // Two tags: trigger tag + config tag\n      tagsField.value = \"clime_early_access,\" + cfgTag;\n    }\n\n    // Human-readable note (optional backup)\n    var noteField = document.getElementById(\"cea-note\");\n    if (noteField) {\n      var lines = [];\n      lines.push(\"CLIME Early Access Sign-up\");\n      if (personaLabel || personaSummary) lines.push(\"\");\n      if (personaLabel)   lines.push(\"Persona: \" + personaLabel);\n      if (personaSummary) lines.push(\"Summary: \" + personaSummary);\n      lines.push(\"\");\n      lines.push(\"Caffeine: \" + caffeineMg + \" mg\");\n      lines.push(\"Focus Boost: \" + focusLevel);\n      lines.push(\"Balance Boost: \" + balanceLevel);\n      lines.push(\"Quantity: \" + qty + \" pouches\");\n      lines.push(\"\");\n      lines.push(\"Base price per pouch: $\" + pricePerPouch.toFixed(2));\n      lines.push(\"Original total: $\" + total.toFixed(2));\n      lines.push(\"Early access bonus (free boost): -$\" + discountTotal.toFixed(2));\n      lines.push(\"Early access total: $\" + finalTotal.toFixed(2));\n      noteField.value = lines.join(\"\\n\");\n    }\n  });\n</script>",
